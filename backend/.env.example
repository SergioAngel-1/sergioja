# ==============================================
# BACKEND - EJEMPLO DE VARIABLES DE ENTORNO
# ==============================================
# Copia este archivo como .env y completa con tus valores reales

# Database
DATABASE_URL=postgresql://usuario:password@localhost:5432/nombre_db?schema=public

# Server
NODE_ENV=development
PORT=5000

# CORS
FRONTEND_URLS=http://localhost:3000,http://localhost:3001

# JWT
JWT_SECRET=tu_secret_aleatorio_seguro

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu_app_password
SMTP_FROM=tu-email@gmail.com
SMTP_FROM_NAME=Tu Nombre
SMTP_ENCRYPTION=tls

# Rate Limiting
# El sistema usa key generator híbrido (userId para auth, IP+fingerprint para anónimos)
# Los límites están configurados en src/lib/rateLimit.ts
# Valores por defecto en producción:
#   - Global: 500 req/15min por dispositivo
#   - Lectura (GET): 300 req/15min
#   - Escritura (POST/PUT/DELETE): 100 req/15min
#   - Analytics: 60 req/min
#   - Login: 5 intentos/15min por IP+email
#   - Contacto: 5 mensajes/hora

# Logging
LOG_LEVEL=debug

# reCAPTCHA Enterprise
RECAPTCHA_ENTERPRISE_PROJECT_ID=tu_project_id
RECAPTCHA_ENTERPRISE_API_KEY=tu_api_key
RECAPTCHA_SITE_KEY=tu_site_key
RECAPTCHA_MIN_SCORE=0.5
RECAPTCHA_BYPASS_DEV=true
